# Wellspring Book Production System - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# === Core AI Services ===
ANTHROPIC_API_KEY=your_anthropic_key
OPENAI_API_KEY=your_openai_key
PERPLEXITY_API_KEY=your_perplexity_key
FIREWORKS_API_KEY=your_fireworks_key
GLAMA_AI_API_KEY=your_glama_ai_key
JINA_API_KEY=your_jina_key

# === Research & Web Services ===
BRAVE_API_KEY=your_brave_key
FIRECRAWL_API_KEY=your_firecrawl_key
EXA_API_KEY=your_exa_api_key_here
RESEND_EMAIL_API_KEY=your_resend_key

# === Database & Storage ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_PASSWORD=your_password

# === External Integrations ===
NOTION_TOKEN=your_notion_token_here
GITHUB_TOKEN=your_github_token

# === Model Configuration ===
MODEL=claude-2
PERPLEXITY_MODEL=codellama-34b-instruct
MAX_TOKENS=4000
TEMPERATURE=0.7

# === Project Settings ===
PROJECT_NAME=wellspring
PROJECT_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=info
DEFAULT_PRIORITY=medium
DEFAULT_SUBTASKS=3

# === Book Production Settings ===
BOOK_TITLE="The Wellspring Manual"
AUTHOR_NAME="Brian V Jones"
AUTHOR_EMAIL="contact@bhsme.org"
BOOK_PAGES=300
PUBLISH_DATE="November 1, 2024"

# === Typography Processing ===
EM_DASH_REPLACEMENT_MODE=contextual
MARGIN_INCREASE_POINTS=3
HEADER_COLOR_SCHEME=blue_gold
SPACING_REDUCTION_FACTOR=0.8
FONT_SIZE_REDUCTION=2

# === Research Configuration ===
CITATION_VERIFICATION_ENABLED=true
DEEP_RESEARCH_MAX_SOURCES=10
FACT_CHECK_CONFIDENCE_THRESHOLD=0.8
QUOTE_RELEVANCE_THRESHOLD=0.7

# === Agent Coordination ===
AGENT_COORDINATION_TIMEOUT=300
MAX_PARALLEL_AGENTS=5
AGENT_RETRY_ATTEMPTS=3
BACKUP_ENABLED=true